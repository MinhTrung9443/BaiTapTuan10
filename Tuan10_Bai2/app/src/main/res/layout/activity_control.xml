<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlueControl">

    <!-- TextView tiêu đề -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Thiết bị đang kết nối"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TextView địa chỉ MAC -->
    <TextView
        android:id="@+id/textViewMAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Địa chỉ MAC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <!-- Nút ngắt kết nối -->

    <!-- Nút thiết bị 1 -->
    <ImageButton
        android:id="@+id/btnDisc"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/btn_disconect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textV1" />

    <ImageButton
        android:id="@+id/binTb1"
        android:layout_width="116dp"
        android:layout_height="112dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/btn1on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMAC" />

    <!-- Nút thiết bị 2 -->
    <ImageButton
        android:id="@+id/binTb2"
        android:layout_width="116dp"
        android:layout_height="112dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/btn1on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toEndOf="@+id/binTb1"
        app:layout_constraintTop_toBottomOf="@+id/textViewMAC" />

    <!-- TextView thông báo -->
    <TextView
        android:id="@+id/textV1"
        android:layout_width="400dp"
        android:layout_height="23dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Thông báo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/binTb1" />

</androidx.constraintlayout.widget.ConstraintLayout>